<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="corp_item"
            type="mi.song.weekand.farm.ui.adapter.CorpListAdapter.CorpVH" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/round_corner"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/corp_item_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/corp_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="plant_name"
            android:textStyle="bold"
            android:textSize="@dimen/big_txt_size"/>
        <TextView
            android:id="@+id/corp_item_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="@string/time"/>

    </LinearLayout>
</layout>