<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mi.song.weekand.farm.ui.menu.setting.SettingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/colorPrimary"
                app:title="@string/menu_name_setting"
                app:titleTextColor="@color/colorPrimaryLight"
                />

            <ListView
                android:id="@+id/setting_menu_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/common_margin"
                android:entries="@array/setting_menu_list"
                android:dividerHeight="@dimen/setting_divider_height" />

        </LinearLayout>

    </FrameLayout>
</layout>