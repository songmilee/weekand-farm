<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="corp_diary"
            type="mi.song.weekand.farm.ui.corpdiary.CorpDiaryActivity" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.corpdiary.CorpDiaryActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_height="300dp"
            android:layout_width="match_parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/corp_diary_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:expandedTitleGravity="center_horizontal"
                app:contentScrim="@color/colorPrimaryDark"
                >

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/corp_diary_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginEnd="5dp"
                    app:layout_collapseMode="pin"
                    app:title="Corp detail"
                    app:navigationIcon="@drawable/ic_arrow_back_24dp" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/corp_diary_add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:backgroundTint="@color/colorAccentDark"
            android:elevation="0dp"
            app:layout_anchor="@id/corp_diary_img"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@android:drawable/ic_menu_add" />

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/corp_diary_recyclerview"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
<!--            />-->

        <ExpandableListView
            android:id="@+id/corp_diary_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>